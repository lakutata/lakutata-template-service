{
  "extends": "lakutata/tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "moduleDetection": "auto",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "build",
    "data"
  ]
}
